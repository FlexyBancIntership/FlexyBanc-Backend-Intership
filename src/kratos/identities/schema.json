{
  "$id": "https://schemas.flexybank.com/v1/customer",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FlexyBank Customer",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "firstName": {
          "type": "string",
          "title": "Prénom",
          "minLength": 1
        },
        "lastName": {
          "type": "string",
          "title": "Nom",
          "minLength": 1
        },
        "phone": {
          "type": "string",
          "title": "Téléphone",
          "minLength": 8
        },
        "birthDate": {
          "type": "string",
          "format": "date",
          "title": "Date de naissance"
        },
        "cinNumber": {
          "type": "string",
          "title": "Numéro CIN",
          "minLength": 8
        },
        "countryCode": {
          "type": "string",
          "title": "Code pays",
          "default": "TN"
        },
        "domainActivity": {
          "type": "string",
          "title": "Domaine d'activité"
        },
        "pack": {
          "type": "string",
          "title": "Pack",
          "enum": ["basic", "premium", "gold"],
          "default": "basic"
        }
      },
      "required": [
        "email",
        "firstName", 
        "lastName", 
        "phone", 
        "birthDate", 
        "cinNumber"
      ],
      "additionalProperties": false
    }
  }
}